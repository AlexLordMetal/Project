@model ServicesApp.ViewModels.ViewModels.ServiceProviderServiceRelationViewModel
@{
    ViewBag.Title = "Service Relation";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("AddServiceRelation", "ServiceProvider", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.ServiceId)
    @Html.HiddenFor(model => model.ServiceProviderId)
    <h4>Add or update service relation.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.ServicePrice, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.ServicePrice, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Confirm" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
