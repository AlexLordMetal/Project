@model ServicesApp.ViewModels.ViewModels.ServicesListViewModel
@using ServicesApp.Website.HtmlHelpers
@{
    ViewBag.Title = "Index";
}

<h2>Services</h2>

@using (Html.BeginForm())
{
    <p>
        Find by name: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}

@if (User.IsInRole("Administrator"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
@if (User.IsInRole("ServiceProvider"))
{
    <p>
        @Html.ActionLink("Add a New Service for Approval", "Create")
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Services.FirstOrDefault().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Services.FirstOrDefault().Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Services.FirstOrDefault().Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Services)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            @if (User.IsInRole("Administrator"))
            {
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            }
            else
            {
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </td>
            }
        </tr>
    }

</table>

<ul class="pagination">
    @Html.PageLinks(Model.PageInfo, x => Url.Action("Index", new { page = x }))
</ul>