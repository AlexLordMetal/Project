@model ServicesApp.ViewModels.ViewModels.ServicesListViewModel

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Services.FirstOrDefault().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Services.FirstOrDefault().Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Services.FirstOrDefault().Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Services)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            @if (User.IsInRole("Administrator"))
            {
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            }
            else
            {
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </td>
            }
        </tr>
    }

</table>

<ul class="pagination">
    @for (int i = 1; i <= Model.PageInfo.TotalPages; i++)
    {
        <li class='@(Model.PageInfo.PageNumber==i?"active":"")'><a >@i</a></li>
    }
</ul>