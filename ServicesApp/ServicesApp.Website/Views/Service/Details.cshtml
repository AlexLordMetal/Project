@model ServicesApp.ViewModels.ViewModels.ServiceViewModelWithRelations

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Service</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Category)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>


    </dl>
</div>

<h4>Service Providers</h4>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ServiceProviderServices.FirstOrDefault().ServiceProvider.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ServiceProviderServices.FirstOrDefault().ServiceProvider.ConfirmDocs)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ServiceProviderServices.FirstOrDefault().ServicePrice)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.ServiceProviderServices)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ServiceProvider.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ServiceProvider.ConfirmDocs)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ServicePrice)
        </td>
        <td>
            @if (User.IsInRole("Customer"))
            {
                <p>
                    @Html.ActionLink("Make Order", "Create", "Order", new { serviceProviderServiceId = item.Id }, null)
                </p>
            }
        </td>
    </tr>
    }

</table>

@if (User.IsInRole("Administrator"))
{
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    </p>
}
else if (User.IsInRole("ServiceProvider"))
{
    <p>
        @Html.ActionLink("Provide this Service", "AddServiceRelation", "ServiceProvider", new { serviceId = Model.Id }, null) |
    </p>
}
<p>
    @Html.ActionLink("Back to List", "Index")
</p>


