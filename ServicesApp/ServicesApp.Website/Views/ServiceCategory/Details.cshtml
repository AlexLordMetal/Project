@model ServicesApp.ViewModels.ViewModels.ServiceCategoryViewModelFull

@{
    ViewBag.Title = "Details";
}

<h2>ServiceCategory Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <hr />
</div>

@foreach (var item in Model.Services)
{
    <div class="panel panel-default">
        <div class="panel-body row">
            <div class="col-sm-3 col-lg-3 fix-height-150">
                @if (item.Photo != null)
                {
                    <img src=@item.Photo.Url class="img-rounded img-responsive img-height-150" />
                }
                else
                {
                    <img src="~/Content/DataImages/NoImage.png" class="img-rounded img-responsive img-height-150" />
                }
            </div>
            <div class="col-sm-9 col-lg-9">
                <div>
                    <dl class="dl-horizontal">

                        <dt>
                            @Html.DisplayNameFor(modelItem => item.Name)
                        </dt>

                        <dd>
                            @Html.DisplayFor(modelItem => item.Name)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(modelItem => item.Category)
                        </dt>

                        <dd>
                            @Html.DisplayFor(modelItem => item.Category)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(modelItem => item.Description)
                        </dt>

                        <dd>
                            @Html.DisplayFor(modelItem => item.Description)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
}

<p>
    <a href=@Url.Action("Edit", new { id = Model.Id }) class="btn btn-default">Edit</a>
    <a href=@Url.Action("Delete", new { id = Model.Id }) class="btn btn-danger">Delete</a>
    | @Html.ActionLink("Back to List", "Index")
</p>
